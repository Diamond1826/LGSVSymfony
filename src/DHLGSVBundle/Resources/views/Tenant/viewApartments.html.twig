{% extends 'DHLGSVBundle::base.html.twig' %}
{% block body %}
	<div class="row">			
		<div class="col-md-12">
			<div class="panel panel-default">
				<div class="panel-heading"><span class="pHeadText">Wohnungen</span></div>
				{% if apartments is empty %}
					<div class="panel-body">
						<p>Noch keine Wohnung vorhanden</p>
					</div>
				{% else %}
				<div class="panel-body">
					<table class="table table-responsive">
						<thead>
							<tr>
								<th>Liegenschaft</th>
								<th>Wohnungs-ID</th>
								<th>Wohnungsbezeichnung</th>
								<th>Miete</th>
							</tr>
						</thead>
						<tbody>
						{% for apartment in apartments %}					 
							<tr>
								<td>{{ apartment.house.street }}</td>
								<td>{{ apartment.id }}</td>
								<td>{{ apartment.name }}</td>
								<td>CHF {{ apartment.rent }}</td>
								<td>
									<a href="{{ path('edit_apartment', {'apartment': apartment.id}) }}"><i class="glyphicon glyphicon-pencil"></i></a>
								</td>								
							</tr>
						{% endfor %}
					</tbody>
					</table>
				</div>
				{% endif %}
			</div>
		</div>
	</div>
	<div class="row">			
		<div class="col-md-12">
			<div class="panel panel-default">
				<div class="panel-heading"><span class="pHeadText">Mieter</span></div>
				{% if allocations is empty %}
					<div class="panel-body">
						<p>Noch keine Mieter vorhanden</p>
					</div>
				{% else %}
				<div class="panel-body">
					<table class="table table-responsive">
						<thead>
							<tr>
								<th>Wohnungs-ID</th>
								<th>Wohnungsbezeichnung</th>
								<th>Miete</th>
								<th>Mieter-ID</th>
								<th>Nachname</th>
								<th>Vorname</th>
								<th>Telefon</th>
							</tr>
						</thead>
						<tbody>
						{% for allocation in allocations %}					 
							<tr>
								<td>{{ allocation.apartment.id }}</td>
								<td>{{ allocation.apartment.name }}</td>
								<td>CHF {{ allocation.apartment.rent }}</td>
								<td>{{ allocation.tenant.id }}</td>
								<td>{{ allocation.tenant.lastname }}</td>
								<td>{{ allocation.tenant.firstname }}</td>
								<td>{{ allocation.tenant.phone }}</td>	
								<td>
									<a href="{{ path('edit_tenant', {'tenant': allocation.tenant.id}) }}"><i class="glyphicon glyphicon-pencil"></i></a>
								</td>							
							</tr>
						{% endfor %}
					</tbody>
					</table>
				</div>
				{% endif %}
			</div>
		</div>
	</div>
{% endblock %}