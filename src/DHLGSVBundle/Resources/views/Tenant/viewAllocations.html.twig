{% extends 'DHLGSVBundle::base.html.twig' %}
{% block body %}
	<div class="row">			
		<div class="col-md-12">
			<div class="panel panel-default">
				<div class="panel-heading"><span class="pHeadText">Wohnungen</span></div>
				{% if tenants.apartments is empty %}
					<div class="panel-body">
						<p>Noch keine Wohnung vorhanden</p>
					</div>
				{% else %}
				<div class="panel-body">
					<table class="table table-responsive">
						<thead>
							<tr>
								<th>Liegenschaft</th>
								<th>Wohnungs-ID</th>
								<th>Wohnungsbezeichnung</th>
								<th>Miete</th>
							</tr>
						</thead>
						<tbody>
						{% for apartment in tenants.apartments %}					 
							<tr>
								<td>{{ apartment.apartment.house.street }}</td>
								<td>{{ apartment.apartment.id }}</td>
								<td>{{ apartment.apartment.name }}</td>
								<td>CHF {{ apartment.apartment.rent }}</td>
								<td>
									<a href="{{ path('edit_apartment', {'apartment': apartment.id}) }}"><i class="glyphicon glyphicon-pencil"></i></a>
								</td>								
							</tr>
						{% endfor %}
					</tbody>
					</table>
				</div>
				{% endif %}
			</div>
		</div>
	</div>
{% endblock %}